syntax = "v1"

type Request {
	Name string `path:"name,options=you|me"`
}

type HelloRequest {
	Name  string `json:"name"`
	Page  int64  `json:"page,default=1,optional"`
	Limit int64  `json:"limit,default=10,optional"`
}

type Response {
	Hello string `json:"hello"`
}

@server (
	middleware: HTTPLogMiddleware
)
service user-api {
	@handler UserHandler
	get /from/:name (Request) returns (Response)

	@handler HelloHandler
	post /hello (HelloRequest) returns (Response)
}

